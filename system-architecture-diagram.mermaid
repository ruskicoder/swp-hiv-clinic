graph TB
    %% Client Layer
    subgraph "Client Layer"
        Browser[Web Browser / Mobile]
    end

    %% Frontend Layer
    subgraph "Frontend Technology Stack"
        React[React 18]
        Vite[Vite Build Tool]
        HttpClient[Axios HTTP Client]
    end

    %% Backend Layer
    subgraph "Backend Technology Stack"
        SpringBoot[Spring Boot 3.2]
        Tomcat[Embedded Tomcat Server]
        SpringSecurity[Spring Security]
        JWT[JWT Authentication]
        RestAPI[REST API Controllers]
        BusinessLogic[Service Layer]
        DataAccess[Repository Layer - JPA/Hibernate]
    end

    %% Database Layer
    subgraph "Database Technology"
        SQLServer[Microsoft SQL Server]
    end

    %% Technology Flow Connections
    Browser --> React
    React -.->|Build Process| Vite
    React -.->|API Calls| HttpClient
    
    HttpClient -.->|HTTPS/REST| RestAPI
    
    %% Spring Boot Framework Connections
    SpringBoot -.->|Web Server| Tomcat
    SpringBoot -.->|Security Framework| SpringSecurity
    SpringBoot -.->|Dependency Injection| RestAPI
    SpringBoot -.->|Dependency Injection| BusinessLogic
    SpringBoot -.->|Dependency Injection| DataAccess
    
    %% Backend Layer Interactions
    RestAPI -.->|Authentication| SpringSecurity
    SpringSecurity -.->|Token Validation| JWT
    RestAPI --> BusinessLogic
    BusinessLogic --> DataAccess
    DataAccess -.->|SQL Queries| SQLServer

